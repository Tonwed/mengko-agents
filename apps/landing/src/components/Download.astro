    description: "Ubuntu, Debian, Fedora",
  },
];
---

<section id="download" class="download">
  <div class="download__bg grid-bg" style="position:absolute;inset:0;opacity:0.25;"></div>
  <div class="gradient-orb gradient-orb--white" style="top: 0; left: 25%; transform: translateX(-50%); opacity: 0.6;"></div>

  <div class="container container--narrow">
    <div class="section-header">
      <h2 class="section-title">
        <span class="text-gradient">Get started for free</span>
      </h2>
      <p class="section-subtitle">Download and connect your AI account in minutes. No credit card required.</p>
      <div class="divider"></div>
    </div>

    <div class="download__grid">
      {platforms.map((platform) => (
        <a href={downloadUrl} class="download-card">
          <div class="download-card__icon">
            <Fragment set:html={platform.icon} />
          </div>
          <div>
            <div class="download-card__name">{platform.name}</div>
            <div class="download-card__desc">{platform.description}</div>
          </div>
          <div class="download-card__action">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            Download
          </div>
        </a>
      ))}
    </div>

    <div class="download__cta">
      <p class="download__license">Open source under Apache 2.0 license</p>
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="btn btn--secondary">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        Star on GitHub
      </a>
    </div>
  </div>
</section>
