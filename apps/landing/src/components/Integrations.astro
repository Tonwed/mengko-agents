<section id="integrations" class="relative py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="gradient-blur gradient-blur-gray absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-semibold tracking-tight mb-4">
        <span class="text-gradient">Connect anything</span>
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        Works with all major AI providers. Use your existing subscriptions or API keys.
      </p>
    </div>

    <!-- Integrations Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {integrations.map((integration) => (
        <div class="glass rounded-xl p-6 flex flex-col items-center justify-center gap-3 hover:bg-white/[0.04] transition-all duration-300 group">
          <div class="w-10 h-10 text-gray-400 group-hover:text-white transition-colors">
            <Fragment set:html={integration.logo} />
          </div>
          <div class="text-center">
            <div class="text-sm font-medium">{integration.name}</div>
            <div class="text-xs text-gray-500">{integration.provider}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- More integrations hint -->
    <div class="mt-8 text-center">
      <span class="text-sm text-gray-500">
        + Any OpenAI-compatible API
      </span>
    </div>
  </div>
</section>